{
    "compileOnSave": false,
    "compilerOptions": {
      "importHelpers": true,
      "module": "es2020",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "target": "ES2022",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "ES2019.Array",
        "ES2021.String",
        "es2017",
        "dom"
      ],
      "plugins": [
        { "name": "tslint-language-service" }
      ]
    }
  }
  